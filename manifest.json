{
  "name": "English Copilot",
  "description": "Enhance your understanding of English content with AI assistance",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["dist/Content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  }
}
